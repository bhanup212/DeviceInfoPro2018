<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativelayout"
    tools:context="latestdeviceinfpro2018.pasupula.bhanupro.deviceinfopro.DeviceFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout

        android:padding="15dp"
        android:layout_marginTop="125dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdf6bb"
        android:paddingBottom="20dp">
        <LinearLayout
            android:id="@+id/linearlayout2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="DEVICE"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/device_name_txt"
                android:text="None"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout4"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_model"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="DEVICE MODEL"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/device_model_txt"
                android:text="None"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout10"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_sdk_version"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="DEVICE SDK RELEASE"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/device_sdk_version_txt"
                android:text="None"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout11"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_sdk_release"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="DEVICE VERSION"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/device_sdk_release_txt"
                android:text="None"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout13"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/display"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="DISPLAY"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/display_txt"
                android:text="none"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout6"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="DEVICE ID"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/device_id_txt"
                android:text="None"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout7"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_serial"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="DEVICE HW SERIAL"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/device_serial_txt"
                android:text="None"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout8"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_local_ip"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="DEVICE LOCAL IP"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/device_local_ip_txt"
                android:text="0.0.0.0"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout9"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/device_mac_address"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="MAC ADDRESS"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/device_mac_address_txt"
                android:text="None" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
